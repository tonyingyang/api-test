{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": false,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "sourceMap": true,
      "allowJs": true,
      "outDir": "dist",
      "rootDir": "./",
      "preserveConstEnums": true,
      "strictNullChecks": true,
      "lib": ["es2015", "es2017"],
      "types": ["node"],
    },
    "include": [
      "app.ts",
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
}
